{
  "name": "task-manager-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",

  "description": "Task Manager Monorepo",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:web": "cd apps/web && npm install && npm run build",
    "start:web": "cd apps/web && npm run start",
    "dev:web": "cd apps/web && npm run dev"
  },
  "devDependencies": {
    "turbo": "^2.1.0",
    "jest": "^29.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^16.0.0"
  },
  "dependencies": {},
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
